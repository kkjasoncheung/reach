<% @page_title ='Welcome' %>
	
<style type="text/css">
	@media(max-width: 1200px){
		img {
			margin-right:100px;
		}
	}

		#hero-text {
			margin-top: 14%;
		}

		.form-group {
			margin: 1% 30%;
			width:40%;
		}

		.btn {
			margin-top:2%;
		}

		.background {
			position: absolute;
			z-index: -1;
			width: 100%;
			height:100%;

		}

		.container-fluid h1, .container-fluid h4 {
			font-weight:300;
			color:white;
		}

		.row .btn-success 
		{
			position: relative;
			top:-10px;
			font-size: 15px;
		}

		.new-user-btn
		{
			position: relative;
			left:3px;
			color:white;
			text-decoration: white;
			border: 1px solid white;
			padding: 10px 15px;
			border-radius: 5px;
			opacity:0.75;
			transition: 0.2s;
		}


		.new-user-btn:hover {
			opacity:1.0;
			color:white;
			text-decoration: none;
		}

		.new-user-row {
			margin-top:4.5%;
		}

		@media (max-width:760px)
		{
			#hero-text h1 {
				font-size:28px;
			}

			#hero-text h4 {
				font-size: 24px;
			}

			.new-user-btn {
				font-size:18px;
			}
		}

		@media (max-width:800px)
		{
			.email_field, .pwd_field {
				width:300px;
				margin: 0 auto;
			}

			.form-group {
				margin:0;
				width:100%;
			}

			
		}
		@media (max-width: 994px){
			.background{
				margin-top: 20px;
				height:100vh;
			}
		}

		@media (max-height:461px){
			.background{
				height:600px;
			}
		}

		.pwd_div {
			margin-top:10px;
			margin-bottom: 15px;
		}
</style>

<body>

	<%= image_tag('blue-grad2.png', :class=>'background') %>

	<% if flash[:notice] %>
        <div class="invalid_flash_msg">
            
            <%= flash[:notice] %>

        </div>
    <% end %>


	<div class="container-fluid index_container">
		<div class="row text-center" id="hero-text">
			<h1>Sign In</h1>
			<h4>Find the clubs that are right for you.</h4>
			<br/>
		</div>
			
		<div class="row">
				<div class="form-group">
					<%= form_tag(:action=>'attempt_login') do %>
						<%= text_field_tag(:email,'', :placeholder=>'Username', :class=>'form-control email_field text-center') %>
						<br>
						<%= password_field_tag(:password,'', :class=>'form-control text-center pwd_field', :placeholder=>'Password') %>
						
						<br>
						<div class="text-center">
							<%= submit_tag('Sign in', :class=>'btn btn-success') %>
						</div>
					<% end %>		
				</div>
		</div>
		<br>
	
		<div class="row text-center new-user-row">

			<%= link_to("Don't have an account? Register Now.", new_user_path, :class=>'new-user-btn') %>

			<br/>
			<br/>
			<br/>
			<%= link_to('Concierge', concierge_public_index_path, :class=>'new-user-btn concierge-btn') %>
		</div>
	
	</div>
</body>
