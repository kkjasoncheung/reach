<p id="notice"><%= notice %></p>

<h1>Club Updates</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @club_updates.each do |club_update| %>
      <tr>
        <td><%= club_update.content %></td>
        <td><%= club_update.title %></td>
        <td><%= link_to 'Show', club_update %></td>
        <td><%= link_to 'Edit', edit_club_update_path(club_update) %></td>
        <td><%= link_to 'Destroy', club_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

