<% @page_title='Show ' + @category.name %>

<%= render(:partial=>'public/navigation') %>

<div class="container">

	<h2> Clubs in <%= @category.name %></h2>
 	<br>
	 	
 	<% if session[:user_id] == 1 %>
		<%= link_to("Create New Club", new_category_club_path(@category.id), :class=>'btn btn-success') %>
		<br>
		<br>
		<%= link_to('Back to categories index', categories_path, :class=>'btn btn-primary') %>
		<br>
		<br>
	<% end %>

	<hr>


		<div class="row">
			<% @category.clubs.each do |club| %>
				<div class="col-md-4 club_content">

					<%= link_to(image_tag(club.display_picture.url(:medium),:class=>'club_dp'), club_page_public_path(club.id)) %>
					<br>

					<h4 id="clubname"><%= link_to club.clubname, club_page_public_path(club.id) %></h4>

				</div>
			<% end %>
		</div>


	<hr>

	<br>
	<br>
	<br>
	<br>

</div>

<%= render(:partial=>'public/footer') %>
